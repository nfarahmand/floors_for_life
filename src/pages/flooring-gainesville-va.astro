const schema = JSON.stringify([
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "@id": "https://www.floorsforlifeco.com/flooring-gainesville-va/",
        "name": "Floors for Life - Gainesville",
        "description": description,
        "url": "https://www.floorsforlifeco.com/flooring-gainesville-va/",
        "telephone": "+1-703-754-9797",
        "image": "https://www.floorsforlifeco.com/hero_hardwood.jpg",
        "priceRange": "$$",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "7371 Atlas Walk Way PMB 602",
            "addressLocality": "Gainesville",
            "addressRegion": "VA",
            "postalCode": "20155",
            "addressCountry": "US"
        },
        "areaServed": {
            "@type": "City",
            "name": "Gainesville",
            "sameAs": "https://en.wikipedia.org/wiki/Gainesville,_Virginia"
        },
        "parentOrganization": {
            "@type": "LocalBusiness",
            "name": "Floors for Life",
            "url": "https://www.floorsforlifeco.com"
        }
    },
    {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": faqs.map(faq => ({
            "@type": "Question",
            "name": faq.question,
            "acceptedAnswer": {
                "@type": "Answer",
                "text": faq.answer
            }
        }))
    }
]);
